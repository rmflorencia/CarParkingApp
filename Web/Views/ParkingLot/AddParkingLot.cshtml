@model ParkingLotViewModel
@using Web.Models

<form asp-action="AddParkingLot" role="form">
    @await Html.PartialAsync("_ModalHeader", new ModalHeader { Heading = "Add Parking Lot" })
    <div class="modal-body form-horizontal">
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="CompanyName" class="col-lg-3 col-sm-3 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="CompanyName" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="col-lg-3 col-sm-3 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="Address" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ZipCode" class="col-lg-3 col-sm-3 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="ZipCode" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="InitialNumberOfFloors" class="col-lg-3 col-sm-3 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="InitialNumberOfFloors" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="InitialNumberOfSpotsPerFloor" class="col-lg-3 col-sm-3 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="InitialNumberOfSpotsPerFloor" class="form-control" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("_ModalFooter", new ModalFooter { })
</form>


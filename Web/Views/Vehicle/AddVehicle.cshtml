@model VehicleViewModel
@using Web.Models

<form asp-action="AddVehicle" role="form">
    @await Html.PartialAsync("_ModalHeader", new ModalHeader { Heading = "Add Vehicle" })
    <div class="modal-body form-horizontal">
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="LicensePlate" class="col-lg-3 col-sm-3 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="LicensePlate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Brand" class="col-lg-3 col-sm-3 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="Brand" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Model" class="col-lg-3 col-sm-3 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="Model" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Owner" class="col-lg-3 col-sm-3 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="Owner" class="form-control" />
                    </div>
                </div>
            </div>           
        </div>
    </div>
    @await Html.PartialAsync("_ModalFooter", new ModalFooter { })
</form>

